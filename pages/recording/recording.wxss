/**index.wxss**/
page{
  background: rgba(250, 243, 243, 0.5);
  position: relative;
  top:35vh;
}
#myVideo{
  position: fixed;
  top: 0;
  z-index: 1
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.play-list{
  width:18rem;
  margin: 0.2rem;
  padding: 0.2rem;
}

.play-list-header{
  display: flex;
  justify-content: space-between;
}

.play-list-header-item{
  vertical-align: bottom;
}
.play-list-header-btn,.play-list-finish-btn{
  background: #ddd;
  width: 7rem;
  height: 1.8rem;
  vertical-align: bottom;
  line-height: 1.8rem;
}
.play-list-chinese{
  color: #aaa;
}
.play-list-footer image {
  width: 20px; 
  height: 20px;

}
.icon,.play-list-footer-progress{
  display: inline-block;
  margin: 2px;
  height: 10px;
}
.play-list-footer-progress{
  width: 80%;
}
.share-footer{
  position: relative;
  top:6rem;
}
.share-footer-item{
  display: inline-block;
  padding: 1.5rem;
  margin: 0.5rem;
}
.play-list-finish-btn,.share-footer-item-publish{
  background: #f7c443;
}
.share-total{
  background: #c2ebe2;
}

.share-preview{
  background: rgba(255, 255, 255, .7);
  position: relative;
  border:#aaa solid 1px;
  top: -2rem;
  left: 14rem;
  text-align: center;
  width: 4rem;
  border-radius: 2rem;
  z-index: 100;
}

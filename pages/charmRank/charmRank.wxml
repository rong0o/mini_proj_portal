<!--pages/rankingList/rankingList.wxml-->
<button class='btny'  bindtap='yellow' size='mini' >实力派</button>
<button class='btng'  bindtap="green" size='mini' >偶像派</button>
<view class='wrap'>
  <view style='position: absolute; top: 0; bottom: 0; left: 0; right: 0;background-image: url({{image_url}}); background-size: 120% 100%; background-repeat: no-repeat;background-position: cover;  margin-left: 40px'>
      <image class='user1' src='{{user1}}' bindtap='one'></image> 
      
      
      <image class='user2' src='{{user2}}'></image> 


      <block wx:if="{{isCharm & isClickUser1}}">
      
          <text class='text1' style=''>{{charmContent1}}</text>
       
      </block>

      <block wx:if="{{isStrength & isClickUser1}}">
        <text class='text1' style=''>{{stengthContent1}}</text>
      </block>


  </view>
</view>
